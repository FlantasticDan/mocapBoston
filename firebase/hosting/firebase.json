{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/onboard/**",
        "function": "onboarding"
      },
      {
        "source": "/share/**",
        "function":"sharing"
      },
      {
        "source": "/keep/**",
        "function":"keepPrivate"
      },
      {
        "source": "/add/**",
        "function":"addGallery"
      }
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  }
}
